{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@commands/*": ["commands/*"],
      "@helper/*": ["helpers/*"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"],
      "@guards/*": ["guards/*"]
    },
  },
  "exclude": ["node_modules"],
  "include": ["src", "test"]
}
